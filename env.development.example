# NODE ENV
NODE_ENV=development

# SERVER PORT (HTTP PORT)
PORT = 4002

# GATEWAY SIGNATURE
API_GATEWAY_SIGNATURE= taskmaster@gateway
GATEWAY_URL = http://localhost:4000

# MYSQL DATABASE CONNECTION
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=1234
AUTH_DB_NAME=taskmaster-todo-db
DB_PORT=3306

# DATABASE BACKUP CONFIGURATION
BACKUP_DIR=./db_backups
RETENTION_DAYS=7

# JWT CONFIG
JWT_SECRET=your_secret_key

# SSL CONFIG
SSL_ENABLED=false
SSL_KEY_PATH=ssl/key.pem
SSL_CERT_PATH=ssl/cert.pem
SSL_PORT=4002

# CORS CONFIG
# Make sure the origins are separated by commas
CORS_ALLOWED_ORIGINS=https://127.0.0.1
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# REDIS CONFIGURATION
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=3600
CLEAR_CACHE_ON_START=true

# Tasks
TASK_TITLE_MAX_LENGTH: 100
TASK_DESCRIPTION_MAX_LENGTH: 255

# Loggers
LOG_LEVEL=info
LOG_DIR=../logs
LOG_DATE_PATTERN=YYYY-MM-DD,
LOG_MAX_SIZE=20m,
LOG_MAX_FILES=14d,
LOG_SERVICE_NAME=taskmaster-ms-auth,